{
  "editor.fontSize": 16,
  "editor.lineHeight": 1.8,
  "editor.fontFamily": "'Maple Mono NF CN', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.unicodeHighlight.allowedCharacters": {
    "：": true,
    "，": true
  },
  "terminal.integrated.fontFamily": "'Maple Mono NF CN', Consolas, 'Courier New', monospace",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "nuxt.config.ts": "package.json, package-lock.json, tsconfig.json, eslint.config.mjs, .prettierrc.json, .env, .gitignore, .npmrc"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120
  }
}
